<%- include('./components/template') %>
<main class="flex-grow container mx-auto px-4 py-8 animate-gradient rounded-2xl shadow-2xl">
  <div class="flex justify-between items-center w-full mx-auto pb-4">
    <div class="flex flex-col">
      <h1 class="text-xl text-white font-semibold mb-0.5" style="font-family: 'Cabin';">Store</h1>
      <p class="text-gray-400 text-md">Use your Coins to upgrade your servers by purchasing resources!</p>
    </div>
    <!-- Breadcrumbs ...unchanged... -->
    <!-- ...existing breadcrumb code... -->
  </div>
  <!-- Store Content -->
  <div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-4">
      <!-- RAM Card -->
      <div class="bg-white/5 rounded-2xl p-8 shadow-xl transition-all duration-300 hover:scale-[1.03] hover:blur-[1px] hover:shadow-orange-500/30">
        <div class="flex justify-center mb-3">
          <span class="bg-orange-600/80 p-4 rounded-full shadow-lg"><i class="fas fa-memory text-3xl text-orange-200"></i></span>
        </div>
        <h3 class="text-xl text-white font-semibold mb-4">RAM</h3>
        <p class="text-gray-400 mb-4">Upgrade your server's memory</p>
        <div class="flex justify-between items-center mb-4">
          <span class="text-lg text-white font-medium">150 Coins / GB</span>
        </div>
        <button onclick="buyRAM()" id="buyRAMBtn" class="w-full bg-orange-600 font-medium text-white py-2 rounded-full hover:bg-orange-700 hover:blur-[2px] shimmer transition">
          <span class="status-icon"><i class="fas fa-arrow-up"></i></span>
          Buy RAM
        </button>
      </div>
      <!-- CPU Card -->
      <div class="bg-white/5 rounded-2xl p-8 shadow-xl transition-all duration-300 hover:scale-[1.03] hover:blur-[1px] hover:shadow-orange-500/30">
        <div class="flex justify-center mb-3">
          <span class="bg-orange-600/80 p-4 rounded-full shadow-lg"><i class="fas fa-microchip text-3xl text-orange-200"></i></span>
        </div>
        <h3 class="text-xl text-white font-semibold mb-4">CPU</h3>
        <p class="text-gray-400 mb-4">Boost your processing power</p>
        <div class="flex justify-between items-center mb-4">
          <span class="text-lg text-white font-medium">200 Coins / Core</span>
        </div>
        <button onclick="buyCPU()" id="buyCPUBtn" class="w-full bg-orange-600 font-medium text-white py-2 rounded-full hover:bg-orange-700 hover:blur-[2px] shimmer transition">
          <span class="status-icon"><i class="fas fa-arrow-up"></i></span>
          Buy CPU
        </button>
      </div>
      <!-- Disk Card -->
      <div class="bg-white/5 rounded-2xl p-8 shadow-xl transition-all duration-300 hover:scale-[1.03] hover:blur-[1px] hover:shadow-orange-500/30">
        <div class="flex justify-center mb-3">
          <span class="bg-orange-600/80 p-4 rounded-full shadow-lg"><i class="fas fa-hdd text-3xl text-orange-200"></i></span>
        </div>
        <h3 class="text-xl text-white font-semibold mb-4">Disk</h3>
        <p class="text-gray-400 mb-4">Expand your storage capacity</p>
        <div class="flex justify-between items-center mb-4">
          <span class="text-lg text-white font-medium">100 Coins / GB</span>
        </div>
        <button onclick="buyDisk()" id="buyDiskBtn" class="w-full bg-orange-600 font-medium text-white py-2 rounded-full hover:bg-orange-700 hover:blur-[2px] shimmer transition">
          <span class="status-icon"><i class="fas fa-arrow-up"></i></span>
          Buy Disk
        </button>
      </div>
    </div>
  </div>
</main>
<script>
function buyRAM() {
  const btn = document.getElementById('buyRAMBtn');
  btn.classList.add('shimmer');
  setTimeout(() => { window.location.href = `/buyresource/ram`; }, 700);
}
function buyCPU() {
  const btn = document.getElementById('buyCPUBtn');
  btn.classList.add('shimmer');
  setTimeout(() => { window.location.href = `/buyresource/cpu`; }, 700);
}
function buyDisk() {
  const btn = document.getElementById('buyDiskBtn');
  btn.classList.add('shimmer');
  setTimeout(() => { window.location.href = `/buyresource/disk`; }, 700);
}
</script>
<%- include('./components/footer') %>

<style>
@keyframes gradient-move {
  0% { background-position: 0% 50%; }
  100% { background-position: 100% 50%; }
}
.animate-gradient {
  background: linear-gradient(270deg, #1e293b, #3b82f6, #6366f1, #1e293b);
  background-size: 600% 600%;
  animation: gradient-move 8s ease-in-out infinite;
}
@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: 200px 0; }
}
.shimmer {
  background: linear-gradient(90deg, rgba(34,197,94,0.1) 25%, rgba(34,197,94,0.2) 50%, rgba(34,197,94,0.1) 75%);
  background-size: 400px 100%;
  animation: shimmer 2s infinite linear;
  border-radius: 9999px;
  padding: 0.2em 0.5em;
  display: inline-block;
}
.status-icon {
  margin-right: 0.5em;
  font-size: 1em;
  vertical-align: middle;
  color: #22c55e;
}
@keyframes spin-slow {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(360deg);}
}
.animate-spin-slow { animation: spin-slow 4s linear infinite; }
</style>