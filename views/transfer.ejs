<%- include('components/template') %>
<main class="flex-grow container mx-auto px-4 py-8 animate-gradient rounded-2xl shadow-2xl">
    <div class="flex justify-between items-center w-full mx-auto pb-4">
        <div class="flex flex-col">
            <h1 class="text-xl font-semibold mb-0.5" style="font-family: 'Cabin';">Transfer coins</h1>
            <p class="text-gray-400 text-md">Give your friends some coins cause why not?</p>
        </div>

        <!-- Breadcrumbs on the right -->
        <nav aria-label="Breadcrumb" class="inline-flex py-2 px-4 rounded-xl bg-white/5 transition-colors duration-200">
            <ol role="list" class="flex items-center space-x-2">
                <li>
                    <a href="/dashboard" class="text-sm flex items-center gap-2 text-zinc-400 hover:text-zinc-200 transition-colors duration-200" aria-current="false">
                        <svg
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler size-4 icons-tabler-outline icon-tabler-home"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                        </svg>
                        <code>dashboard</code>
                    </a>
                </li>
                <li class="flex items-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right size-4 text-zinc-400"
                    >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M9 6l6 6l-6 6"></path>
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                      </svg>                      
                </li>
                <li>
                    <a href="#_" class="text-sm flex items-center gap-2 font-medium text-white/80 hover:text-white transition-colors duration-200" aria-current="page">
                        Transfer
                    </a>
                </li>
            </ol>
        </nav>
    </div>

    <!-- AFK Page Content -->
    <div class="mt-24 flex justify-center">
        <div class="text-center">
            <div class="mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-16 w-16 bg-white/5 p-1.5 rounded-xl border border-white/10 mx-auto text-gray-200 animate-spin-slow">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                </svg>
            </div>
            <h2 class="text-2xl font-bold mb-4">Transfer</h2>
            <p class="text-gray-400 mb-6">Send coins to other users on the platform</p>
    
            <form>
                <div class="space-y-4">
                    <div>
                        <label for="coins" class="block text-sm font-medium text-gray-200">Coins</label>
                        <input 
                            type="text" 
                            id="coins" 
                            class="bg-gray-200 text-sm font-medium text-gray-700 px-4 py-2 rounded-full w-full hover:bg-gray-400 hover:blur-[2px] transition" 
                            placeholder="Enter coins">
                    </div>
                    <div>
                        <label for="receiver-email" class="block text-sm font-medium text-gray-200">Receiver Email</label>
                        <input 
                            type="text" 
                            id="receiver-email" 
                            class="bg-gray-200 text-sm font-medium text-gray-700 px-4 py-2 rounded-full w-full hover:bg-gray-400 hover:blur-[2px] transition" 
                            placeholder="Enter receiver's email">
                    </div>
                </div>                
            </form>
            <div class="border-t border-white/5 mb-4">
                <br />
                <a id="transferBtn" onclick="sendcoins()" class="cursor-pointer transition ease-in-out group relative flex justify-center rounded-full border border-transparent py-2 px-6 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 hover:blur-[2px] shimmer focus:outline-none">
                    <span class="status-icon"><i class="fas fa-paper-plane"></i></span>
                    Transfer
                </a>
            </div>
            <div id="transferStatus" class="mt-2 text-sm text-gray-300"></div>
        </div>
    </div>
</main>
<script>
    function sendcoins() {
        const email = document.getElementById('receiver-email').value;
        const coins = document.getElementById('coins').value;
        const btn = document.getElementById('transferBtn');
        const status = document.getElementById('transferStatus');

        if (!email || !coins) {
            status.innerHTML = '<span class="status-icon" style="color:#ef4444"><i class="fas fa-times-circle"></i></span> Email and Coins Input is Required';
            return;
        }

        btn.classList.add('shimmer');
        status.innerHTML = '<span class="status-icon shimmer"><i class="fas fa-spinner fa-spin"></i></span> Processing...';

        setTimeout(() => {
            window.location.href = `/transfercoins?coins=${coins}&email=${email}`;
        }, 700);
    }
</script>
<%- include('./components/footer') %>

<style>
@keyframes gradient-move {
  0% { background-position: 0% 50%; }
  100% { background-position: 100% 50%; }
}
.animate-gradient {
  background: linear-gradient(270deg, #1e293b, #3b82f6, #6366f1, #1e293b);
  background-size: 600% 600%;
  animation: gradient-move 8s ease-in-out infinite;
}
@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: 200px 0; }
}
.shimmer {
  background: linear-gradient(90deg, rgba(34,197,94,0.1) 25%, rgba(34,197,94,0.2) 50%, rgba(34,197,94,0.1) 75%);
  background-size: 400px 100%;
  animation: shimmer 1.5s infinite linear;
}
.status-icon {
  display: inline-block;
  width: 1.2em;
  height: 1.2em;
  margin-right: 0.5em;
  vertical-align: middle;
  font-size: 1.2em;
}
</style>
