<div class="min-h-screen bg-gradient-to-br from-gray-900 via-blue-950 to-gray-800">
  <%- include('./components/template') %>
  <!-- Main Content -->
  <main class="container flex-grow px-6 py-12 mx-auto animate-fade-in">
    <div class="flex items-center justify-between w-full pb-8 mx-auto animate-slide-in">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- Discord Button -->
<a href="https://change.in.disboard.ejs/disocrd.gg/your-invte-link"
   target="_blank"
   rel="noopener"
   class="absolute top-6 right-8 z-50 inline-flex items-center gap-2 px-5 py-2 bg-[#5865F2] text-white font-semibold rounded-full shadow-lg hover:bg-[#4752c4] transition-all">

   <i class="fa-brands fa-discord text-xl"></i>
   <span class="hidden sm:inline">Join Discord us</span>
</a>
 <!-- ------------------------------------------------------------------------------ -->
      <!-- Welcome text and subtext on the left -->
      <div class="flex flex-col">
        <h1 class="text-3xl font-extrabold text-white drop-shadow-lg" style="font-family: 'Cabin';">dashboard</h1>
        <p class="text-gray-300 text-lg mt-2">Monitor and manage your resources effectively.</p>
      </div>

      <!-- Breadcrumbs -->
      <nav aria-label="Breadcrumb" class="bg-gradient-to-r from-blue-900/40 via-blue-800/30 to-blue-900/40 backdrop-blur-xl rounded-2xl px-7 py-4 shadow-lg border border-blue-700/30 animate-fade-in">
        <ol class="flex items-center space-x-4 text-gray-300 font-medium">
          <li>
            <a href="#" class="hover:text-blue-200 flex items-center gap-2 transition-all duration-200">
              <span class="bg-blue-700/60 p-2 rounded-full shadow-md"><i class="fas fa-home text-lg"></i></span>
              <span>Home</span>
            </a>
          </li>
          <li class="text-blue-400">/</li>
          <li class="text-blue font-bold">Dashboard</li>
        </ol>
      </nav>
    </div>

    <!-- Welcome Banner -->
    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-2xl text-center animate-pop-in mb-8 border border-blue-900/30">
      <h2 class="text-2xl font-bold text-white animate-text-fade mb-2">Welcome back!</h2>
      <p class="text-gray-200 text-lg">Manage your wallet, deploy resources, and upgrade deployments.</p>
    </div>

    <!-- Resource Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mt-8 animate-fade-in">
      <div class="p-8 bg-gradient-to-br from-blue-800/40 via-blue-700/30 to-blue-900/40 backdrop-blur-xl rounded-3xl shadow-2xl text-center hover:scale-105 hover:shadow-blue-500/40 transition-all border border-blue-400/30">
        <div class="flex justify-center mb-3">
          <span class="bg-blue-700/80 p-4 rounded-full shadow-lg"><i class="fas fa-memory text-3xl text-blue-200"></i></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-1" style="font-family: 'Cabin', sans-serif;">Total RAM</h3>
        <p class="text-4xl font-extrabold text-blue-200"><%= max_resources.ram %> MiB</p>
      </div>
      <div class="p-8 bg-gradient-to-br from-yellow-800/40 via-yellow-700/30 to-yellow-900/40 backdrop-blur-xl rounded-3xl shadow-2xl text-center hover:scale-105 hover:shadow-yellow-500/40 transition-all border border-yellow-400/30">
        <div class="flex justify-center mb-3">
          <span class="bg-yellow-700/80 p-4 rounded-full shadow-lg"><i class="fas fa-microchip text-3xl text-yellow-200"></i></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-1" style="font-family: 'Cabin', sans-serif;">Total CPU</h3>
        <p class="text-4xl font-extrabold text-yellow-200"><%= max_resources.cores %> Cores</p>
      </div>
      <div class="p-8 bg-gradient-to-br from-purple-800/40 via-purple-700/30 to-purple-900/40 backdrop-blur-xl rounded-3xl shadow-2xl text-center hover:scale-105 hover:shadow-purple-500/40 transition-all border border-purple-400/30">
        <div class="flex justify-center mb-3">
          <span class="bg-purple-700/80 p-4 rounded-full shadow-lg"><i class="fas fa-hdd text-3xl text-purple-200"></i></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-1" style="font-family: 'Cabin', sans-serif;">Total Disk</h3>
        <p class="text-4xl font-extrabold text-purple-200"><%= max_resources.disk %> GiB</p>
      </div>
    </div>

    <!-- Upgrade, Manage, and Create Server Boxes -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mt-12 animate-fade-in">
      <div class="p-8 bg-green-700/30 backdrop-blur-md rounded-2xl shadow-xl text-center hover:scale-105 transition-transform border border-green-400/20">
        <h3 class="text-xl font-bold text-green-300 mb-2">Upgrade Resources</h3>
        <p class="text-gray-200 mb-4">Need more power? Upgrade your RAM, CPU, or storage!</p>
        <a href="/store" class="mt-4 inline-flex items-center gap-2 px-8 py-3 font-semibold text-white bg-green-600 rounded-lg hover:bg-green-500 transition-all shadow-lg">
          <i class="fas fa-arrow-up"></i> Upgrade Now
        </a>
      </div>
      <div class="p-8 bg-yellow-700/30 backdrop-blur-md rounded-2xl shadow-xl text-center hover:scale-105 transition-transform border border-yellow-400/20">
        <h3 class="text-xl font-bold text-yellow-300 mb-2">Manage Servers</h3>
        <p class="text-gray-200 mb-4">View, configure, and control your deployed servers.</p>
        <a href="/instances" class="mt-4 inline-flex items-center gap-2 px-8 py-3 font-semibold text-white bg-yellow-600 rounded-lg hover:bg-yellow-500 transition-all shadow-lg">
          <i class="fas fa-cogs"></i> Manage Servers
        </a>
      </div>
      <div class="p-8 bg-blue-700/30 backdrop-blur-md rounded-2xl shadow-xl text-center hover:scale-105 transition-transform border border-blue-400/20">
        <h3 class="text-xl font-bold text-blue-300 mb-2">Create Server</h3>
        <p class="text-gray-200 mb-4">Deploy a new server with ease.</p>
        <a href="/create-server" class="mt-4 inline-flex items-center gap-2 px-8 py-3 font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-500 transition-all shadow-lg">
          <i class="fas fa-plus-circle"></i> Create Server
        </a>
      </div>
    </div>
  </main>
  <%- include('./components/footer') %>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes slide-in {
  from { transform: translateY(-10px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
@keyframes pop-in {
  from { transform: scale(0.95); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}
.animate-fade-in { animation: fade-in 0.8s ease-out; }
.animate-slide-in { animation: slide-in 0.6s ease-out; }
.animate-pop-in { animation: pop-in 0.5s ease-out; }
@keyframes text-fade {
  0% { opacity: 0; transform: translateY(-10px); }
  50% { opacity: 0.5; }
  100% { opacity: 1; transform: translateY(0); }
}
.animate-text-fade { animation: text-fade 1.2s ease-out; }
</style>
